{
    "mime_type": "application/json/ons/eq",
    "schema_version": "0.0.1",
    "data_version": "0.0.2",
    "survey_id": "lms",
    "title": "Test Address Playback",
    "description": "Test Address Playback",
    "theme": "default",
    "legal_basis": "Voluntary",
    "eq_id": "lms",
    "form_type": "1",
    "navigation": {
        "visible": true
    },
    "metadata": [{
        "name": "user_id",
        "validator": "string"
    }, {
        "name": "period_id",
        "validator": "string"
    }, {
        "name": "ru_name",
        "validator": "string"
    }, {
        "name": "address_line1",
        "validator": "string"
    }, {
        "name": "address_line2",
        "validator": "string"
    }, {
        "name": "locality",
        "validator": "string"
    }, {
        "name": "town_name",
        "validator": "string"
    }, {
        "name": "postcode",
        "validator": "string"
    }],
    "sections": [{
        "id": "address-section",
        "title": "About your address",
        "groups": [{
            "id": "about-address-group",
            "title": "About your address",
            "blocks": [{
                "type": "ConfirmationQuestion",
                "id": "address-confirmation",
                "question": {
                    "type": "General",
                    "answers": [{
                        "type": "Radio",
                        "id": "confirm-address-answer",
                        "options": [{
                            "label": "Yes this is correct",
                            "value": "Yes"
                        }, {
                            "label": "No I need to change this",
                            "value": "No"
                        }],
                        "mandatory": true
                    }],
                    "id": "confirm-address-question",
                    "title": "Is your address correct?",
                    "description": "{{ format_address_list ([answers['address-line1'], answers['address-line2'], answers['locality'], answers['town-name'], answers['postcode']], [metadata['address_line1'], metadata['address_line2'], metadata['locality'], metadata['town_name'], metadata['postcode']]) }}"
                },
                "routing_rules": [{
                    "goto": {
                        "block": "address-edit",
                        "when": [{
                            "id": "confirm-address-answer",
                            "condition": "equals",
                            "value": "No"
                        }]
                    }
                }, {
                    "goto": {
                        "block": "address-check-block"
                    }
                }]
            }, {
                "type": "Question",
                "id": "address-edit",
                "description": "",
                "question": {
                    "id": "address-edit-question",
                    "title": "What is your address?",
                    "type": "General",
                    "answers": [{
                            "id": "address-line1",
                            "label": "Number",
                            "mandatory": false,
                            "type": "TextField"
                        },
                        {
                            "id": "address-line2",
                            "label": "Street",
                            "mandatory": false,
                            "type": "TextField"
                        },
                        {
                            "id": "locality",
                            "label": "Locality",
                            "mandatory": false,
                            "type": "TextField"
                        },
                        {
                            "id": "town-name",
                            "label": "Town or City",
                            "mandatory": false,
                            "type": "TextField"
                        },
                        {
                            "id": "postcode",
                            "label": "Postcode",
                            "mandatory": false,
                            "type": "TextField"
                        }
                    ]
                },
                "routing_rules": [{
                    "goto": {
                        "block": "address-check-block"
                    }
                }]
            }, {
                "type": "Question",
                "id": "address-check-block",
                "description": "{{ format_address_list ([answers['address-line1'], answers['address-line2'], answers['locality'], answers['town-name'], answers['postcode']], [metadata['address_line1'], metadata['address_line2'], metadata['locality'], metadata['town_name'], metadata['postcode']]) }}",
                "question": {
                    "id": "address-check-question",
                    "title": "Is the address above your main residence?",
                    "description": "",
                    "type": "General",
                    "answers": [{
                        "id": "address-check-answer",
                        "mandatory": false,
                        "options": [{
                                "label": "Yes",
                                "value": "Yes",
                                "description": "The address above is my main residence"
                            },
                            {
                                "label": "No",
                                "value": "No",
                                "description": "The address above is not my main residence.  For example it is my old address, second home, holiday home or business address"
                            }
                        ],
                        "type": "Radio"
                    }]
                },
                "routing_rules": [{
                    "goto": {
                        "block": "summary"
                    }
                }]
            }, {
                "type": "Summary",
                "id": "summary"
            }]
        }]
    }]
}

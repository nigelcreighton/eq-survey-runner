{
    "mime_type": "application/json/ons/eq",
    "schema_version": "0.0.1",
    "data_version": "0.0.2",
    "survey_id": "023",
    "title": "Date formats",
    "description": "A test schema for different date formats",
    "theme": "default",
    "metadata": [{
        "name": "user_id",
        "validator": "string"
    }, {
        "name": "period_id",
        "validator": "string"
    }, {
        "name": "ru_name",
        "validator": "string"
    }, {
        "name": "ref_p_start_date",
        "validator": "date"
    }, {
        "name": "ref_p_end_date",
        "validator": "date"
    }],
    "sections": [{
        "id": "default-section",
        "groups": [{
            "id": "dates",
            "title": "Date Range Validation",
            "blocks": [{
                "type": "Question",
                "id": "date-range-block",
                "title": "Date Range",
                "question": {
                    "id": "date-range-question",
                    "title": "Enter Date Range",
                    "type": "DateRange",
                    "guidance": {
                        "content": [{
                            "list": ["Dates between 2 and 3 months apart", "Period from date greater than 1 month before {{metadata['ref_p_start_date']|format_date}}", "Period to date no greater than 3 months after {{metadata['ref_p_end_date']|format_date}}"]
                        }]
                    },
                    "period_limits": {
                        "minimum": {
                            "months": 2
                        },
                        "maximum": {
                            "months": 3
                        }
                    },
                    "answers": [{
                        "id": "date-range-from",
                        "label": "Period from",
                        "mandatory": true,
                        "type": "MonthYearDate",
                        "minimum": {
                            "meta": "ref_p_start_date",
                            "offset_by": {
                                "months": -1
                            }
                        }
                    }, {
                        "id": "date-range-to",
                        "label": "Period to",
                        "mandatory": true,
                        "type": "MonthYearDate",
                        "maximum": {
                            "meta": "ref_p_end_date",
                            "offset_by": {
                                "months": 3
                            }
                        }
                    }]
                }
            }, {
                "type": "Summary",
                "id": "summary"
            }]
        }]
    }]
}
